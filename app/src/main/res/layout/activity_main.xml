<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/underGroupText"
        android:layout_width="61dp"
        android:layout_height="24dp"
        android:layout_marginTop="@dimen/_58sdp"
        android:layout_marginBottom="@dimen/_108sdp"
        android:text="25,02,31"
        android:textColor="@color/myGrayColor"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/numbergroup"
        app:layout_constraintVertical_bias="0.0" />


    <ImageView
        android:id="@+id/rectangle_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"

        android:background="@drawable/image"
        app:layout_constraintBottom_toTopOf="@+id/buttonDone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textOverlay1"
        android:layout_width="@dimen/_290sdp"
        android:layout_height="@dimen/_55sdp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="134dp"
        android:layout_marginBottom="160dp"

        android:fontFamily="@font/my_font"
        android:paddingHorizontal="@dimen/_88sdp"
        android:paddingVertical="@dimen/_3sdp"
        android:text="ISZZI"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_40sdp"
        app:layout_constraintBottom_toTopOf="@+id/buttonDone"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_1"
        app:layout_constraintStart_toStartOf="@+id/rectangle_1"
        app:layout_constraintTop_toTopOf="@+id/rectangle_1" />

    <TextView
        android:id="@+id/textOverlay"
        android:layout_width="370dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="206dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="80dp"
        android:fontFamily="@font/my_font"
        android:paddingHorizontal="@dimen/_85sdp"
        android:paddingVertical="@dimen/_17sdp"
        android:text="Schedule"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_25sdp"
        app:layout_constraintBottom_toTopOf="@+id/buttonDone"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_1"
        app:layout_constraintStart_toStartOf="@+id/rectangle_1"
        app:layout_constraintTop_toTopOf="@+id/rectangle_1" />

    <EditText
        android:id="@+id/numbergroup"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_35sdp"
        android:background="@drawable/border"
        android:paddingHorizontal="10dp"
        android:saveEnabled="true"
        android:text="Введіть свою групу..."
        android:textColor="@color/myGrayColor"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.694" />


    <Button
        android:id="@+id/buttonLo"
        android:layout_width="110dp"
        android:layout_height="45dp"

        android:layout_marginStart="6dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="96dp"
        android:backgroundTint="#A3ABE687"
        android:text="Зберегти"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/underGroupText"
        app:layout_constraintStart_toStartOf="@+id/numbergroup"
        app:layout_constraintTop_toTopOf="@+id/underGroupText"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonUn"
        android:layout_width="110dp"
        android:layout_height="45dp"

        android:layout_marginStart="49dp"
        android:layout_marginTop="76dp"
        android:layout_marginBottom="96dp"
        android:backgroundTint="#A3FF0000"
        android:text="Видалити"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/numbergroup"
        app:layout_constraintStart_toStartOf="@+id/underGroupText"
        app:layout_constraintTop_toTopOf="@+id/underGroupText"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonDone"
        android:layout_width="200dp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/button"
        android:text="Готово"
        android:textSize="@dimen/_25sdp"
        app:layout_constraintBottom_toTopOf="@+id/numbergroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rectangle_1" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="142dp"
        android:layout_marginEnd="38dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonLo"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numbergroup"
        app:layout_constraintVertical_bias="0.321"
        app:srcCompat="@android:drawable/ic_menu_help" />


</androidx.constraintlayout.widget.ConstraintLayout>


